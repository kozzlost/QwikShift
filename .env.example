# Server Configuration
PORT=3001
NODE_ENV=development

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/zipshift
DB_NAME=zipshift

# Authentication & Security
JWT_SECRET=your_super_secret_jwt_key_change_in_production
JWT_EXPIRE=7d
BCRYPT_ROUNDS=10

# Payment Processing (Stripe)
STRIPE_PUBLIC_KEY=pk_test_your_public_key_here
STRIPE_SECRET_KEY=sk_test_your_secret_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here

# External APIs
GOOGLE_MAPS_API_KEY=your_google_maps_api_key_here
SENDGRID_API_KEY=your_sendgrid_api_key_here
TWILIO_ACCOUNT_SID=your_twilio_account_sid_here
TWILIO_AUTH_TOKEN=your_twilio_auth_token_here
TWILIO_PHONE_NUMBER=+1234567890

# Email Configuration
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your_email@gmail.com
EMAIL_PASSWORD=your_app_password_here
EMAIL_FROM=noreply@zipshift.com

# Application Settings
LOCATION_RADIUS=50
WORKER_VERIFICATION_REQUIRED=true
AUTO_ACCEPT_JOBS=false
PAYMENT_PROCESSING_ENABLED=true

# Analytics
GOOGLE_ANALYTICS_ID=UA-XXXXXXXXX-X
MIXPANEL_TOKEN=your_mixpanel_token_here
SENTRY_DSN=your_sentry_dsn_here

# Frontend Configuration
REACT_APP_API_URL=http://localhost:3001/api
REACT_APP_GOOGLE_MAPS_API_KEY=your_google_maps_api_key_here

# Mobile App Configuration (React Native)
RN_API_URL=https://api.zipshift.com
RN_IMAGE_BUCKET=zipshift-images
RN_ENVIRONMENT=development

# Redis Cache (Optional)
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=

# Logging
LOG_LEVEL=debug
LOG_FORMAT=json

# CORS Settings
CORS_ORIGIN=http://localhost:3000,http://localhost:8080
ALLOWED_DOMAINS=localhost,127.0.0.1

# Deployment (Heroku/Netlify)
HEROKU_API_KEY=your_heroku_api_key_here
NETLIFY_AUTH_TOKEN=your_netlify_auth_token_here
NETLIFY_SITE_ID=your_netlify_site_id_here
