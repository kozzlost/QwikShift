{
    "name": "zipshift",
    "version": "1.0.0",
    "description": "Location-based job matching app - Find event staff in 24 hours",
    "main": "index.html",
    "author": "kozzlost",
    "license": "MIT",
    "scripts": {
          "dev": "concurrently \"npm run dev:frontend\" \"npm run dev:backend\"",
          "dev:frontend": "http-server",
          "dev:backend": "nodemon server.js",
          "dev:mobile": "expo start",
          "build": "webpack --mode production",
          "test": "jest --coverage",
          "lint": "eslint .",
          "lint:fix": "eslint . --fix",
          "format": "prettier --write .",
          "deploy": "netlify deploy --prod",
          "deploy:backend": "git push heroku main"
    },
    "keywords": [
          "event staffing",
          "job matching",
          "location-based",
          "workers",
          "employers"
    ],
    "dependencies": {
          "axios": "^1.6.0",
          "express": "^4.18.0",
          "mongoose": "^8.0.0",
          "bcryptjs": "^2.4.0",
          "jsonwebtoken": "^9.1.0",
          "stripe": "^14.0.0",
          "dotenv": "^16.3.0",
          "cors": "^2.8.5",
          "nodemailer": "^6.9.0"
    },
    "devDependencies": {
          "jest": "^29.7.0",
          "eslint": "^8.50.0",
          "prettier": "^3.0.0",
          "nodemon": "^3.0.0",
          "webpack": "^5.88.0",
          "webpack-cli": "^5.1.0",
          "concurrently": "^8.2.0",
          "http-server": "^14.1.0"
    },
    "engines": {
          "node": ">=16.0.0",
          "npm": ">=8.0.0"
    }
}
